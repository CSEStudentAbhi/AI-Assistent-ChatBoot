{
	"info": {
		"_postman_id": "simple-chatbot-api",
		"name": "Simple Portfolio Chatbot API",
		"description": "Simple API for Abhishek Ambi's Portfolio Chatbot - Just ask questions and get answers",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"health"
					]
				},
				"description": "Check if the API is running"
			},
			"response": []
		},
		{
			"name": "API Documentation",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/",
					"host": [
						"{{base_url}}"
					],
					"path": [
						""
					]
				},
				"description": "Get API documentation and usage instructions"
			},
			"response": []
		},
		{
			"name": "Ask Question - Skills",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"question\": \"What are my strongest technical skills?\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/ask",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"ask"
					]
				},
				"description": "Ask about technical skills"
			},
			"response": []
		},
		{
