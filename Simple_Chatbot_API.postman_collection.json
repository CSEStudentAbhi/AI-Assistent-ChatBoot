					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"question\": \"Tell me about the Shri Vagdevi Construction project\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/ask",
